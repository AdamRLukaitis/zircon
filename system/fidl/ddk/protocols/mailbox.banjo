library ddk.protocol.mailbox;

using zx;

struct MailboxDataBuf {
    uint32 cmd;
    vector<void> tx;
};

struct MailboxChannel {
    uint32 mailbox;
    vector<void> rx;
};

[Layout="ddk-protocol"]
interface Mailbox {
  1: SendCommand(MailboxChannel channel, MailboxDataBuf mdata) -> (zx.status s);
};
